<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Edit Math Term </h1>
    <form action="/terms" method="POST">

  <label for="name">Name: </label>
  <input type="text" name="name" id="name"  value ="<%= terms.name %>" required />

  <label for="definition">definition:</label>
  <input type="text" name="definition" id="definition" value ="<%= terms.definition %>" required  />

  <label for="example">example:</label>
  <input type="text" name="example" id="example" value ="<%= terms.example %>" required />

  <label for="category">category:</label>
<select name="category" id="category" value ="<%= terms.category %>"  required>
  <option value="" disabled selected>choose</option> 
  
  <option value="Algebra"> (Algebra)</option>
  <option value="Geometry"> (Geometry)</option>
  <option value="Calculus"> (Calculus)</option>
  <option value="Statistics"> (Statistics)</option>
  <option value="Other"> (Other)</option> 
</select>
  <button type="submit">Edit Listing</button>
</form>
</body>
